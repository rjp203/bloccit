<h1><%= @post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @post.body %></p>
    <p><%= @post.resolved %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_question_path(@post), class: 'btn btn-success' %>
    <%= link_to "Delete Question", @post, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
  </div>
</div>
